@model AppDomainCore.Entities.User


<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-action="Login" asp-controller="User" class="container my-5">
    <div class="form-group">
        <label asp-for="UserName" class="form-label"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-dark mt-3">ورود</button>
</form>

<a href="@Url.Action("Register", "User")" class="btn btn-dark mt-3">ثبت نام</a>