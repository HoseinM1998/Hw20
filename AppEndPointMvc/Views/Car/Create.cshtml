@model AppDomainCore.Entities.Car

@if (TempData["Success"] != null)
{
    <div class="alert alert-primary" role="alert">
        <samp>
            @TempData["Success"].ToString();

        </samp>
    </div>
}


<h2>ایجاد خودرو جدید</h2>
<div asp-validation-summary="All" class="text-bg-danger"></div>
<form method="post" asp-action="Create" asp-controller="Car">
    <div class="form-group">
        <label class="form-label" asp-for="Model">مدل</label>
        <input class="form-control" asp-for="Model" value="@Model.Model"  />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>شرکت</label><br />
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="CarEnum_IranKhodro" name="CarEnum" value="1"  />
            <label class="form-check-label" for="CarEnum_IranKhodro">ایرانخودرو</label>
            <span class="text-bg-danger" asp-validation-for="CarEnum"></span>

        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="CarEnum_Saipa" name="CarEnum" value="2"  />
            <label class="form-check-label" for="CarEnum_Saipa">سایپا</label>
            <span class="text-bg-danger" asp-validation-for="CarEnum"></span>
        </div>
    </div>


    <button type="submit" class="btn btn-primary">ثبت خودرو</button>
</form>