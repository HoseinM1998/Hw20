@model AppDomainCore.Entities.Car


<h2>ایجاد خودرو جدید</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Model">مدل</label>
        <input type="text" class="form-control" id="Model" name="Model" value="@Model.Model" required />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>شرکت</label><br />
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="CarEnum_IranKhodro" name="CarEnum" value="1" required />
            <label class="form-check-label" for="CarEnum_IranKhodro">ایرانخودرو</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="CarEnum_Saipa" name="CarEnum" value="2" required />
            <label class="form-check-label" for="CarEnum_Saipa">سایپا</label>
        </div>
    </div>


    <button type="submit" class="btn btn-primary">ثبت خودرو</button>
</form>