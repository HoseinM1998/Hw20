@model List<AppDomainCore.Entities.TechnicalExamination>


<h2>لیست درخواست ها</h2>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>ایدی</th>
        <th>نام و نام خانوادگی</th>
        <th>شماره تلفن</th>
        <th>کدملی</th>
        <th>پلاک خودرو</th>
        <th>سال تولید</th>
        <th>آدرس</th>
        <th>مدل خودرو</th>
        <th>تاریخ نوبت</th>
        <th>وضعیت</th>
        <th>عملیات</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var tech in Model)
    {
        <tr>
            <td>@tech.Id</td>
            <td>@tech.FullName</td>
            <td>@tech.Phone</td>
            <td>@tech.NationalCode</td>
            <td>@tech.CarLicensePlate</td>
            <td>@tech.YearProduction.Year</td>
            <td>@tech.Address</td>
            <td>@tech.Car.Model</td> 
            <td>@tech.AppointmentDate.ToString("yyyy-MM-dd")</td>
            <td>@tech.Status</td>
            <td>
                <form method="post" action="@Url.Action("ChangeStatus", "TechnicalExamination")" class="d-inline">
                    <input type="hidden" name="id" value="@tech.Id" />

                    <div class="form-check">
                        <input id="confirmation" class="form-check-input" type="radio" name="status" value="1">
                        <label for="confirmation" class="form-check-label">تایید</label>
                    </div>

                    <div class="form-check">
                        <input id="cancel" class="form-check-input" type="radio" name="status" value="2">
                        <label for="cancel" class="form-check-label">لغو</label>
                    </div>

                    <div class="form-check">
                        <input id="underReview" class="form-check-input" type="radio" name="status" value="3">
                        <label for="underReview" class="form-check-label">درحال بررسی</label>
                    </div>

                    <button type="submit" class="btn btn-sm btn-dark">ثبت</button>
                </form>


            </td>
        </tr>
    }
    </tbody>
</table>
<a href="@Url.Action("ListOldCar", "TechnicalExamination")" class="btn btn-dark mt-3">نمایش ماشین‌های قدیمی</a>