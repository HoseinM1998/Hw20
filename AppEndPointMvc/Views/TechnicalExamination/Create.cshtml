@model List<AppDomainCore.Entities.Car> 
<h2>فرم معاینه فنی</h2>

<form method="post">
    <div class="form-group">
        <label for="FullName">نام و نام خانوادگی</label>
        <input type="text" class="form-control" id="FullName" name="FullName" required />
    </div>
    <div class="form-group">
        <label for="Phone">تلفن همراه</label>
        <input type="text" class="form-control" id="Phone" name="Phone" required />
    </div>
    <div class="form-group">
        <label for="NationalCode">کد ملی</label>
        <input type="text" class="form-control" id="NationalCode" name="NationalCode" required />
    </div>
    <div class="form-group">
        <label for="CarLicensePlate">پلاک خودرو</label>
        <input type="text" class="form-control" id="CarLicensePlate" name="CarLicensePlate" required />
    </div>
    <div class="form-group">
        <label for="YearProduction">سال تولید</label>
        <input type="date" class="form-control" id="YearProduction" name="YearProduction" required />
    </div>
    <div class="form-group">
        <label for="Address">آدرس</label>
        <input type="text" class="form-control" id="Address" name="Address" required />
    </div>

    <!-- انتخاب مدل خودرو -->
    <div class="form-group">
        <label for="CarId">مدل خودرو</label>
        <select class="form-control" id="CarId" name="CarId" required>
            <option value="">انتخاب کنید</option>
            @foreach (var car in Model)  
            {
                <option value="@car.Id">@car.Model</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="AppointmentDate">تاریخ نوبت</label>
        <input type="date" class="form-control" id="AppointmentDate" name="AppointmentDate" required />
    </div>

    <button type="submit" class="btn btn-dark">ثبت معاینه</button>
</form>
